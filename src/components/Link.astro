---
import { type HTMLAttributes } from 'astro/types';
import { cn } from '@/lib/utils';
import { cva } from 'class-variance-authority';

interface Props extends HTMLAttributes<'a'> {
	color?: 'primary' | 'white' | 'inherit';
	className?: string;
}

const { color, className, ...restProps } = Astro.props;

const linkVariants = cva('joey_body1 hover:underline cursor-pointer transition-all duration-300', {
	variants: {
		color: {
			primary: 'text-primary',
			white: 'text-common-white',
			inherit: 'text-typography-primary'
		}
	},
	defaultVariants: {
		color: 'primary'
	}
});
---

<a class={cn(linkVariants({ color, className }))} {...restProps}>
	<slot />
</a>
