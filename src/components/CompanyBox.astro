---
import { cn } from '@/lib/utils';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
	company: {
		logoUrl: string;
		name: string;
	};
}

const { company, ...restProps } = Astro.props;
---

<div
	{...restProps}
	class={cn(
		'flex flex-col justify-center items-center rounded-xl bg-white p-4 hover:bg-primary-500',
		restProps.class
	)}
>
	<img src={company.logoUrl} alt={company.name} class="h-16 w-auto" />
</div>
