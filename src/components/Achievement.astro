---
import { cn } from '@/lib/utils';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
	title: string;
	description: string;
}

const { title, description, ...restProps } = Astro.props;
---

<div
	{...restProps}
	class={cn(
		'flex flex-col items-start p-0 lg:p-4 gap-6 md:gap-4 lg:gap-6 w-full md:max-w-[295px] lg:max-w-[342px]',
		restProps.class
	)}
>
	<div class="text-primary-500 size-16">
		<slot name="icon" />
	</div>
	<div class="flex flex-col gap-2">
		<p class="joey_body1_bold">{title}</p>
		<p class="joey_body1">{description}</p>
	</div>
</div>
